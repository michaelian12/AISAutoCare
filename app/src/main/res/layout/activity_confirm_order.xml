<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/confrim_order_mechanic_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_account" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <TextView
                android:id="@+id/confirm_order_garage_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:text="Andoyo Motor"
                />
            <TextView
                android:id="@+id/confirm_order_mechanic_phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No HP: 02147483647"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/confirm_order_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga : "
                android:textSize="22dp" />

            <TextView
                android:id="@+id/confirm_order_distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jarak Tempuh : "
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/confirm_order_cancel_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Batal"
                android:textAllCaps="true"
                android:textColor="@color/accent_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirm_order_confirm_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/accent_color"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Pesan"
                android:textAllCaps="true"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>