<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_vehicle"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp">

            <TextView
                android:id="@+id/vehicle_year_card_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                tools:text="2016" />

            <TextView
                android:id="@+id/vehicle_manufacturer_card_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/vehicle_year_card_text_view"
                android:paddingLeft="8dp"
                android:textAllCaps="true"
                android:textColor="@color/secondary_text"
                tools:text="Ford" />

            <TextView
                android:id="@+id/vehicle_model_card_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vehicle_year_card_text_view"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Mustang" />

            <TextView
                android:id="@+id/vehicle_transmission_card_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/chevron"
                android:paddingRight="16dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                tools:text="MT" />

            <ImageView
                android:id="@+id/chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>